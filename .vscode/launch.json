    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Spoon.ConsoleApp/bin/Debug/netcoreapp3.1/Spoon.ConsoleApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Spoon.ConsoleApp",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Launch (Avalonia)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Spoon.AvaloniaApp/bin/Debug/netcoreapp3.1/Spoon.AvaloniaApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Spoon.AvaloniaApp",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}